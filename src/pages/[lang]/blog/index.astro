---
import Layout from '../../../layouts/Layout.astro';
import { getTranslation, getPath } from '../../../i18n';

const lang = Astro.params.lang || 'pt';
const t = getTranslation(lang);

const postsByLang = {
  pt: [{ slug: 'horta-madeira-1-dia', title: 'Horta Vertical de Madeira em 1 Dia', description: 'Aprenda a construir uma horta vertical sustentÃ¡vel', date: '2026-01-15', tags: ['horta', 'madeira'] }],
  es: [{ slug: 'huerto-madera-1-dia', title: 'Huerto Vertical de Madera en 1 DÃ­a', description: 'Aprende a construir un huerto vertical sostenible', date: '2026-01-15', tags: ['huerto', 'madera'] }],
  en: [{ slug: 'wooden-garden-1-day', title: 'Wooden Vertical Garden in 1 Day', description: 'Learn to build a sustainable vertical garden', date: '2026-01-15', tags: ['garden', 'wood'] }]
