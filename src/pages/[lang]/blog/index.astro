const posts = postsByLang[lang as keyof typeof postsByLang] || postsByLang.pt;
---

<Layout lang={lang} title={t.blog.title}>
  <div class="container mx-auto px-4 py-20">
    <h1 class="text-5xl font-bold mb-12 text-wood-400">{t.blog.title}</h1>
    <div class="grid md:grid-cols-3 gap-8">
      {posts.map(post => (
        <article class="bg-gray-800 rounded-xl overflow-hidden border border-gray-700 hover:border-wood-500 transition">
          <div class="aspect-video bg-gradient-to-br from-wood-700 to-wood-900 flex items-center justify-center">
            <span class="text-7xl">ðŸŒ¿</span>
          </div>
          <div class="p-6">
            <div class="flex gap-2 mb-3">
              {post.tags.map((tag: string) => (
                <span class="text-xs bg-gray-700 px-2 py-1 rounded">{tag}</span>
              ))}
            </div>
            <time class="text-sm text-gray-400">{post.date}</time>
            <h2 class="text-2xl font-bold mt-2 mb-3 text-wood-300">{post.title}</h2>
            <p class="text-gray-400 mb-4">{post.description}</p>
            <a href={getPath(lang, `/blog/${post.slug}`)} class="text-wood-400 hover:text-wood-300 font-semibold">{t.blog.readMore} â†’</a>
          </div>
        </article>
      ))}
